generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  hash             String
  Firstname        String?
  Lastname         String?
  phone            String?
  role             UserRole          @default(USER)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  Screenname       String?           @unique
  bookings         Booking[]
  favorites        Favorite[]
  payments         Payment[]
  rentals          Rental[]
  tourRequests     TourRequest[]
  appliesRequested appliesRequested?
}

model appliesRequested {
  id          String    @id @default(uuid())
  userId      String  
  requestedAt DateTime  @default(now())
  propertyId  String?
  status      String    @default("PENDING")
  property    Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

   @@unique([userId, propertyId])
}

model Property {
  id               String             @id @default(uuid())
  title            String
  description      String?
  type             PropertyType
  address          String
  images           String[]
  beds             Int
  typerooms        String
  baths            Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  coords           Json
  location         String
  offers           String
  price            Json
  amenities        Amenity[]
  bookings         Booking[]
  favoritedBy      Favorite[]
  rentals          Rental[]
  tourRequests     TourRequest[]
  appliesRequested appliesRequested[]
}

model TourRequest {
  id          String   @id @default(uuid())
  userId      String
  propertyId  String
  requestedAt DateTime @default(now())
  status      String   @default("PENDING")
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Favorite {
  id         String   @id @default(uuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
}

model Amenity {
  id         String   @id @default(uuid())
  name       String   @unique
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Booking {
  id         String        @id @default(uuid())
  userId     String
  propertyId String
  startDate  DateTime
  endDate    DateTime
  status     BookingStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  property   Property      @relation(fields: [propertyId], references: [id])
  user       User          @relation(fields: [userId], references: [id])
  payments   Payment[]
}

model Rental {
  id         String       @id @default(uuid())
  userId     String
  propertyId String
  startDate  DateTime
  endDate    DateTime?
  status     RentalStatus @default(ACTIVE)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  payments   Payment[]
  property   Property     @relation(fields: [propertyId], references: [id])
  user       User         @relation(fields: [userId], references: [id])
}

model Payment {
  id        String        @id @default(uuid())
  userId    String
  bookingId String?
  rentalId  String?
  amount    Int
  status    PaymentStatus @default(PENDING)
  reference String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  booking   Booking?      @relation(fields: [bookingId], references: [id])
  rental    Rental?       @relation(fields: [rentalId], references: [id])
  user      User          @relation(fields: [userId], references: [id])
}

enum UserRole {
  USER
  ADMIN
}

enum PropertyType {
  APARTMENT
  ShortLET
  Hostels
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum RentalStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
